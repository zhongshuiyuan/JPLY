<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_view_rounded"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_view_rounded_blue"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_two_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:paddingLeft="5dp"
            android:text="@string/gpssetting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />

        <ImageView
            android:id="@+id/textView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_view_rounded_image"
            android:contentDescription="@null"
            android:gravity="center"
            android:padding="3dp"
            android:src="@drawable/ic_close_black_24dp"
            android:text="@string/gpssetting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/larger_txtsize20" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_linearlayout"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linearlayout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="选择区县" />

                <!--style="@style/spinner_style_m"-->
                <Spinner
                    android:id="@+id/edittxt_selqx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linearlayout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/gps_dx" />

                <EditText
                    android:id="@+id/edittxt_dx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edittxt"
                    android:digits="01234567-."
                    android:gravity="bottom"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:padding="5dp"
                    android:textColor="@color/balck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linearlayout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/gps_dy" />

                <EditText
                    android:id="@+id/edittxt_dy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edittxt"
                    android:digits="01234567-."
                    android:gravity="bottom"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:padding="5dp"
                    android:textColor="@color/balck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linearlayout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/gps_dz" />

                <EditText
                    android:id="@+id/edittxt_dz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edittxt"
                    android:digits="01234567-."
                    android:gravity="bottom"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:padding="5dp"
                    android:textColor="@color/balck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linearlayout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/gps_da" />

                <EditText
                    android:id="@+id/edittxt_da"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edittxt"
                    android:digits="01234567-."
                    android:enabled="false"
                    android:gravity="bottom"
                    android:hint=""
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/balck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linearlayout"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/gps_df" />

                <EditText
                    android:id="@+id/edittxt_df"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edittxt"
                    android:digits="01234567-."
                    android:enabled="false"
                    android:gravity="bottom"
                    android:hint=""
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/balck" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_view_rounded_blue"
                android:gravity="center">

                <TextView
                    android:id="@+id/gpssettings_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/background_view_rounded_lightblue"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="@string/sure"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>