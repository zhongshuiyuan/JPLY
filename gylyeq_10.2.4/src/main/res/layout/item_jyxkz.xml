<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_linearlayout"
    android:padding="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_ns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:padding="3dp"
        android:text="@string/nsjl_sfns" />

    <TextView
        android:id="@+id/tv_dq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:padding="3dp"
        android:text="@string/nsjl_ssdq" />

    <TextView
        android:id="@+id/tv_zh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:padding="3dp"
        android:text="@string/nsjl_xkzh" />

    <TextView
        android:id="@+id/tv_mc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center|left"
        android:text="@string/nsjl_qymc" />

    <TextView
        android:id="@+id/tv_dz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center|left"
        android:padding="3dp"
        android:text="@string/nsjl_qydz" />

    <TextView
        android:id="@+id/tv_zx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:padding="3dp"
        android:gravity="center|left"
        android:text="@string/nsjl_sfzx" />
</LinearLayout>