<resources>

    <!-- Base application theme. -->
    <style name="TitanAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--
        <item name="android:colorBackground">@color/colorPrimary</item>
-->
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorBackground">@color/gray</item>-->
        <item name="colorPrimary">@color/colorPrimary</item><!--标题栏-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--状态栏-->
        <item name="colorAccent">@color/colorAccent</item><!--强调色-->
        <!-- <item name="android:background">@color/bg</item>-->
        <!--<item name="android:listDivider">@drawable/rulecolur</item>-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <!--下段代码就是去除阴影的-->
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>-->

    <style name="FetionTheme.Dialog.Toast" parent="@style/FetionTheme.Dialog">
        <item name="android:background">@drawable/toast_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FetionTheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">#ff747474</item>
        <item name="android:textSize">18sp</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="radiobutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/tab_selector</item>
    </style>

    <style name="popup_bottom_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>


</resources>
