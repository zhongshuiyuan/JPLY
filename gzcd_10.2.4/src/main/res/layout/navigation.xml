<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="导航"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/navigation_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/background_view_rounded_blue"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_black_24dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <EditText
        android:id="@+id/navigation_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittxt"
        android:drawableLeft="@drawable/navigat_start"
        android:hint="输入起点或在地图上选点"
        android:padding="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <EditText
        android:id="@+id/navigation_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edittxt"
        android:drawableLeft="@drawable/navigat_stop"
        android:hint="输入终点或在地图上选点"
        android:padding="5dp" />

    <Button
        android:id="@+id/navigation_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_blue"
        android:padding="5dp"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>