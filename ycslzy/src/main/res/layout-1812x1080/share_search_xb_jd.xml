<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="小班简单查询"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/close_xbsearch_jd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_view_image"
            android:contentDescription="@null"
            android:gravity="right|center"
            android:padding="4dp"
            android:src="@drawable/ic_close_black_24dp" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_linearlayout"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/jdsearch_xbh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_view_image"
            android:button="@null"
            android:gravity="center"
            android:ems="2"
            android:text="小班号" />

        <RadioButton
            android:id="@+id/jdsearch_xmmc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_view_image"
            android:button="@null"
            android:ems="2"
            android:gravity="center"
            android:text="项目名称" />

        <RadioButton
            android:id="@+id/jdsearch_gclb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_view_image"
            android:button="@null"
            android:ems="2"
            android:gravity="center"
            android:text="工程类别" />

        <RadioButton
            android:id="@+id/jdsearch_nd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_view_image"
            android:button="@null"
            android:ems="1"
            android:gravity="center"
            android:text="年度" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_linearlayout"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/jdquery_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background_edittxt"
            android:hint="" />

        <Button
            android:id="@+id/btn_sure_jd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_view_rounded_image"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/sure"
            android:textColor="@color/blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toplayou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_expandlistview"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="县"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="乡"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="村"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:padding="5dp"
            android:text="小班号"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_result_xbsearch_jd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_image"></ListView>

</LinearLayout>